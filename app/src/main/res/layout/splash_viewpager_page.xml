<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/splash_viewpager_page_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/splash_viewpager_page_text"
        android:scaleType="fitCenter"/>

    <com.tutor93.indraaguslesmana.actlikepro.views.BTextView
        android:id="@+id/splash_viewpager_page_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/splash_viewpager_text_to_pic"
        android:gravity="center"
        android:textSize="@dimen/splash_viewpager_text_size"
        android:textColor="@color/splash_viewpager_text_color"
        android:paddingLeft="@dimen/splash_viewpager_text_padding"
        android:paddingRight="@dimen/splash_viewpager_text_padding"/>

</RelativeLayout>
